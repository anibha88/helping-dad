<%= render 'shared/errors', obj: @detail %>
<div class="row">
  <div class="col-md-12">
     <%= form_for(@detail, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :date %>
        </div>
        <div class="col-md-8">
          <%= f.date_select :date, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :shop_name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :shop_name, class: "form-control", placeholder: "Name of the shop", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :cust_name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :cust_name, class: "form-control", placeholder: "Name of the customer", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :phone %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :phone, class: "form-control", placeholder: "Contact number of the customer", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :address %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :address, rows: 5, class: "form-control", placeholder: "Enter the full address" %>
        </div>
      </div>

       <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :status %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :status, rows: 20, class: "form-control", placeholder: "Please type in the status" %>
        </div>
      </div>


     
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch"> [<%= link_to 'Cancel Request and return to homepage', root_path %>] </div>
  </div>
</div>

