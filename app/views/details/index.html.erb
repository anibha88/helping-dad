<p id="notice"><%= notice %></p>

<h1>Details</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Shop name</th>
      <th>Cust name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.date.strftime("%d/%m/%Y") if !detail.date.nil? %></td>
        <td><%= detail.shop_name %></td>
        <td><%= detail.cust_name %></td>
        <td><%= detail.phone %></td>
        <td><%= detail.address %></td>
        <td><%= detail.status %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Detail', new_detail_path %>
